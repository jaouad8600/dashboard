generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Groep {
  id        String     @id @default(uuid())
  naam      String
  kleur     String     @default("gray")
  notities  Notitie[]
  createdAt DateTime   @default(now())
}

model Notitie {
  id        String   @id @default(uuid())
  tekst     String
  auteur    String?
  datumISO  DateTime @default(now())
  groep     Groep    @relation(fields: [groepId], references: [id])
  groepId   String
}

model Materiaal {
  id        String   @id @default(uuid())
  naam      String
  aantal    Int
  locatie   String
  status    String
  createdAt DateTime @default(now())
}

model Overdracht {
  id        String   @id @default(uuid())
  auteur    String
  bericht   String
  datumISO  DateTime @default(now())
  tijd      String
  belangrijk Boolean  @default(false)
}

model Planning {
  id        String   @id @default(uuid())
  titel     String
  locatie   String
  start     DateTime
  eind      DateTime
  notitie   String?
  createdAt DateTime @default(now())
}
